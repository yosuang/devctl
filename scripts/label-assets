#!/bin/bash
set -e

if [ $# -eq 0 ]; then
  echo "usage: scripts/label-assets dist/devctl_*" >&2
  exit 1
fi

for asset; do
  label="$(basename "$asset")"
  label="${label%.*}"
  label="${label%.tar}"
  label="DevCTL $(tr '_' ' ' <<<"${label#devctl_}")"
  case "$asset" in
  *.msi ) label="${label} installer" ;;
  *.deb ) label="${label} deb" ;;
  *.rpm ) label="${label} RPM" ;;
  esac
  printf '"%s#%s"\n' "$asset" "$label"
done